@import './common/*'
@import './mixins/mixin'
@import './mixins/utils'

/* ce-col css 样式 */
[class*='ce-col-']
  float left
  box-sizing border-box

.ce-col-0
  display none

for num in (0 .. 24)
  .ce-col-{num}
    width (1 / 24 * num * 100) * 1%

  .ce-col-offset-{num}
    margin-left (1 / 24 * num * 100) * 1%

  .ce-col-pull-{num}
    position relative
    right (1 / 24 * num * 100) * 1%

  .ce-col-push-{num}
    position relative
    left (1 / 24 * num * 100) * 1%

