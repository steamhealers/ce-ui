@import './common/*'
@import './mixins/*'

/* ce-row css 样式 */
+b_('row')
  position relative
  box-sizing border-box

  +m_('flex')
    display flex

    &:before, &:after
      display none

    +when_(justify-center)
      justify-content center

    +when_(justify-end)
      justify-content flex-end

    +when_(justify-space-between)
      justify-content space-between

    +when_(justify-space-around)
      justify-content space-around

    +when_(align-middle)
      align-items center

    +when_(align-bottom)
      align-items flex-end
